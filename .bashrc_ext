set -o vi

alias ll='ls -la --color=auto'
alias vim='nvim'

if [ -f /usr/bin/bat ]; then
    alias cat='bat'
fi

if [ -f /usr/bin/batcat ]; then
    alias cat='batcat'
fi

if [ -n "$PS1" ] && [ -z "$TMUX" ]; then
    tmux attach-session -t default || tmux new-session -s default
fi

if [ -f /usr/bin/fastfetch ]; then
    alias ff='fastfetch'
    ff
fi
